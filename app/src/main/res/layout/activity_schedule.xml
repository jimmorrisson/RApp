<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RAGrayColor"
    tools:context=".ScheduleActivity">

    <LinearLayout
        android:id="@+id/schedule_nav_bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/RAGrayColor">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="16.25"
            android:onClick="btnLeftClicked"
            android:rotation="-180"
            android:src="@drawable/arrow_right"/>

        <TextView
            android:id="@+id/textViewDay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="66.6"
            android:background="@color/RAGrayColor"
            android:gravity="center"
            android:text="@string/monday"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="16.25"
            android:onClick="btnRightClicked"
            android:src="@drawable/arrow_right"/>
    </LinearLayout>


    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schedule_nav_bar"
        android:layout_alignParentStart="true"
        android:background="@color/RAGrayColor"
        android:divider="@drawable/listview_divider"
        android:dividerHeight="4px"></ListView>


</RelativeLayout>